{
  "id": "akka-cluster-example-frontend",
  "mem": 256,
  "cpus": 0.5,
  "instances": 1,
  "uris": [
    "file:///etc/docker.tar.gz"
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "jmarin/akka-cluster-example-frontend:latest",
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 0,
          "servicePort": 10080,
          "protocol": "tcp",
          "labels": {
            "VIP_0": "/akka-cluster-example-frontend:8080"
          }
        }
      ]
    }
  },
  "env": {
    "ZOOKEEPER_HOST": "exhibitor-dcos.marathon.mesos",
    "ZOOKEEPER_PORT": 31866
  },
  "labels": {
    "HAPROXY_GROUP": "internal"
  }
}